# =============================================================================
# REROOM DEVELOPMENT ENVIRONMENT CONFIGURATION
# =============================================================================

# -----------------------------------------------------------------------------
# Application Environment
# -----------------------------------------------------------------------------
NODE_ENV=development
ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://reroom:reroom_dev_pass@localhost:5432/reroom_dev
POSTGRES_DB=reroom_dev
POSTGRES_USER=reroom
POSTGRES_PASSWORD=reroom_dev_pass

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
JWT_SECRET=reroom_dev_jwt_secret_key_change_in_production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=reroom_dev_refresh_secret_change_in_production
REFRESH_TOKEN_EXPIRES_IN=30d

# -----------------------------------------------------------------------------
# API Service Ports
# -----------------------------------------------------------------------------
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
PHOTO_SERVICE_PORT=3002
AI_SERVICE_PORT=8000
PRODUCT_SERVICE_PORT=3003

# -----------------------------------------------------------------------------
# Service URLs (Internal Docker Network)
# -----------------------------------------------------------------------------
AUTH_SERVICE_URL=http://auth-service:3001
PHOTO_SERVICE_URL=http://photo-service:3002
AI_SERVICE_URL=http://ai-service:8000
PRODUCT_SERVICE_URL=http://product-service:3003

# -----------------------------------------------------------------------------
# External Service URLs (For Mobile App)
# -----------------------------------------------------------------------------
EXPO_PUBLIC_API_BASE_URL=http://localhost:3000
EXPO_PUBLIC_AUTH_SERVICE_URL=http://localhost:3001
EXPO_PUBLIC_PHOTO_SERVICE_URL=http://localhost:3002
EXPO_PUBLIC_AI_SERVICE_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# AWS/S3 Configuration (Using MinIO for Development)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_BUCKET=reroom-photos
S3_ENDPOINT=http://minio:9000
S3_PUBLIC_ENDPOINT=http://localhost:9000

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin

# -----------------------------------------------------------------------------
# Amazon Product API (Optional - Leave blank for development)
# -----------------------------------------------------------------------------
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_ASSOCIATE_TAG=

# -----------------------------------------------------------------------------
# AI Service Configuration
# -----------------------------------------------------------------------------
QDRANT_URL=http://qdrant:6333
MODEL_CACHE_DIR=/app/models
OPENAI_API_KEY=
HUGGINGFACE_API_KEY=

# -----------------------------------------------------------------------------
# Email Configuration (Optional for development)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@reroom.app

# -----------------------------------------------------------------------------
# File Upload Configuration
# -----------------------------------------------------------------------------
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/heic

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------
SENTRY_DSN=
FIREBASE_CONFIG=
MIXPANEL_TOKEN=

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------
DEBUG=reroom:*
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_CORS=true

# -----------------------------------------------------------------------------
# Mobile App Configuration
# -----------------------------------------------------------------------------
EXPO_PUBLIC_APP_NAME=ReRoom
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development


