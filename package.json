{
  "name": "reroom-monorepo",
  "version": "1.0.0",
  "description": "ReRoom - AI-powered interior design app with price discovery",
  "private": true,
  "workspaces": [
    "mobile",
    "backend/*",
    "shared"
  ],
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "dev": "concurrently \"pnpm run dev:mobile\" \"pnpm run dev:backend\"",
    "dev:mobile": "cd mobile && pnpm start",
    "dev:backend": "pnpm run docker:up && pnpm run dev:services",
    "dev:services": "concurrently \"pnpm run dev:auth\" \"pnpm run dev:photo\" \"pnpm run dev:ai\"",
    "dev:auth": "cd backend/auth-service && pnpm run dev",
    "dev:photo": "cd backend/photo-service && pnpm run dev",
    "dev:ai": "cd backend/ai-service && python3 -m uvicorn main:app --reload --port 8000",
    "build": "pnpm run build:mobile && pnpm run build:backend",
    "build:mobile": "cd mobile && pnpm run build",
    "build:backend": "docker compose build",
    "test": "pnpm run test:mobile && pnpm run test:backend",
    "test:mobile": "cd mobile && pnpm test",
    "test:backend": "pnpm run test:services",
    "test:services": "cd backend && pnpm test",
    "lint": "pnpm run lint:mobile && pnpm run lint:backend",
    "lint:mobile": "cd mobile && pnpm run lint",
    "lint:backend": "cd backend && pnpm run lint",
    "setup": "pnpm install && pnpm run setup:mobile && pnpm run setup:backend",
    "setup:mobile": "cd mobile && pnpm install",
    "setup:backend": "pnpm run setup:services && pnpm run docker:pull",
    "setup:services": "cd backend && pnpm install",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:pull": "docker compose pull",
    "db:migrate": "cd backend && pnpm run db:migrate",
    "db:seed": "cd backend && pnpm run db:seed",
    "clean": "pnpm run clean:mobile && pnpm run clean:backend",
    "clean:mobile": "cd mobile && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
} 